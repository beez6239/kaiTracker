@model LoginDto

<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <link href="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.css" rel="stylesheet" />
  <title>@ViewBag.title </title>
</head>
<body style="background-color: black; height:100%; margin: 0; ">

  <div class="flex items-center justify-center min-h-screen">
    <div class="w-full max-w-md bg-white dark:bg-gray-800 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 p-8">
      <h2 class="text-2xl font-bold text-center text-gray-900 dark:text-white mb-8">Login KaiTracker</h2>
      <form class="max-w-sm mx-auto" asp-controller="Account" asp-action="Login">
        <div class="mb-5">
          <label for="email" asp-for="Email" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Email</label>
          <input type="email" asp-for="Email" id="email" class="shadow-xs bg-white border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-xs-light" required />
        </div>
        <div class="mb-5">
          <label for="password" asp-for="Password" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Password</label>
          <input asp-for="Password" type="password" id="password" class="shadow-xs bg-white border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-xs-light" required />
        </div>
        <button type="submit" class="w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800 mb-5">Login</button>
        <div class="text-sm font-medium text-gray-900 dark:text-white text-center">
          Not registered yet? <a href="@Url.Action("Register", "Home")" class="text-blue-600 hover:underline dark:text-blue-500">Create account</a>
        </div>
      </form>
    </div>
  </div>

</body>
</html>